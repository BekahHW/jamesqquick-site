---
import { Image } from "@astrojs/image/components";
import Button from "./Button.astro";

const {heading, body, link, alt, logoSrc, btnText} = Astro.props;
---

<div class="bg-bgDark rounded-3xl py-20 px-10 text-300 flex flex-col lg:flex-row justify-center lg:justify-between items-center">
  <div>
    <h2 class="text-4xl lg:text-6xl font-light mb-6">{heading}</h2>
    <p class="leading-8 tracking-wide text-lg lg:text-xl font-light mb-10">
      {body}
    </p>
    <Button text={btnText} isLink href={link} />
  </div>

    <Image
      src={logoSrc}
      alt={alt}
      height={300}
      width={300}
      class={`rounded-lg md:max-w-none w-[200px] sm:w-[300px] lg:translate-x-[100px]
      order-first lg:order-1 mb-10 lg:mb-0`}
      
    />
</div>
