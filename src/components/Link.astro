---
export interface Props {
  href: string;
  text: string;
  classStr?: string;
}
const { href, text, classStr = "" } = Astro.props;
---

<a
  class={`group transition-all duration-300 ease-in-out relative ${classStr} pl-1`}
  href={href}
  rel="noopener noreferrer"
  target="_blank"
>
  {text}<span
    class="absolute left-0 -bottom-0 w-full h-0.5 bg-brand -z-10 group-hover:h-full group-hover:transition-all rounded-sm"
  ></span>
</a>
